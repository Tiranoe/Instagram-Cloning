<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include( 'partials/head.ejs' ) %>
  <body>
    <%- include( 'partials/nav.ejs' ) %>
    <section>
        <div>
            <h1 class="title">New Post</h1>
          </div>
        </section>

<main class = "container">
    <div>
        <form action="/posts" method="POST">
            <div>
                <label for="title">Post Title</label>
                <input 
                    type="text" 
                    placeholder="Enter your title" 
                    name="title" 
                    id="title" />
            </div>
            <div>
                <label for="image">Post Image</label>
                <input 
                    class="input"
                    type="text" 
                    placeholder="Enter your image URL with http://" 
                    name="image" 
                    id="image" />
            </div>
            <div>
                <input 
                    type="hidden" 
                    name="user" 
                    value="<%= currentUser.id %>" />
            </div>
            <!-- <h1><%= currentUser.id %></h1> -->
            <button class="button is-info">Create new Post</button>
        </form>
    </div>
</main>
</body>
</html>