<!DOCTYPE html>
<html lang="en">
    <!-- head -->
	<%- include( 'partials/head.ejs', { page: 'Posts' } ) %> 
    <body>  
		<%- include( 'partials/nav.ejs' )  %>

        <section>
            <div>
                <h2 class="title">All Instagram Posts</h2>
            </div>
        </section>

        <main class="container">
            <div>
                <% for( let i = 0; i<posts.length; i++){ %>
                    <% const firstPost = posts[i] %>
                    <a href="/posts/<%= firstPost._id %>"><%= firstPost.name %></a> 
                <% } %> 
            </div>
        </main>
    
	</body>
</html>