<!DOCTYPE html>
<html lang="en">
    <!-- head -->
	<%- include( '../partials/head.ejs', { page: 'Posts' } ) %> 
    <body>  
		<%- include( '../partials/nav.ejs' )  %>

        <section>
            <div>
                <h2 class="title">All Instagram Posts</h2>
            </div>
        </section>

        <main class="container">
            <% posts.forEach((post) => { %>
                <div class="post-container">
                    <div class="post-header">
                        <p class="post-username"><a href="/users/<%= post.user._id%>"><%= post.user.username %></a></p>
                    </div>
                    <img class="post-image" src="<%= post.image %>" alt="<%= post.title %>">
                    <div class="post-content">
                        <div class="post-icons">
                            <i class="far fa-heart fa-2x"></i>
                            <i class="far fa-comment fa-2x"></i>
                        </div>
                        <p class="post-likes"><%= post.likes %> likes</p>
                        <div>
                            <p class="post-username"><a href="/users/<%= post.user._id%>"><%= post.user.username %></a>:</p>
                            <h2 class="post-title"><%= post.title %></h2>
                        </div>
                        <p class="post-date"><%= post.createdAt %></p>
                        <a href="/posts/<%= post._id %>" class="post-comments-link">View all comments</a>
                    </div>
                </div>
            <% }) %>
        </main>
    
	</body>
</html>